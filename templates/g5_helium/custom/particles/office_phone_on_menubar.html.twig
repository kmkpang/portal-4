{% extends '@nucleus/partials/particle.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="office_phone_on_menubar.scss"/>
{% endblock %}
{% block particle %}
    <span class="s-office-phone-container {{ particle.css.class }}">
        {% if particle.phone.icon  %}
            {% if particle.phone.number %}
                <a class="{{ particle.phone.icon }} s-office-phone-icon" href="tel:{{ particle.phone.number }}">
                     <span class="s-office-phone-label">{{ particle.phone.number }}</span>
                </a>
            {% endif %}
        {% endif %}
    </span>
{% endblock %}
